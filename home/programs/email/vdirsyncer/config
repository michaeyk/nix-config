[general]
status_path = ~/.local/share/vdirsyncer/status/

[pair my_contacts]
a = "contacts_local"
b = "contacts_remote"

[collections]
my_contacts.metadata = ["displayname"]

[storage contacts_local]
type = "filesystem"
path = "~/.contacts/"
fileext = ".vcf"

[storage contacts_remote]
type = "carddav"
url = "https://nextcloud.michaelkim.net/remote.php/dav/addressbooks/users/mike/contacts/"
username = "mike"
password.fetch = ["command", "${pkgs.pass}/bin/pass", "show"]
